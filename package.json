{
    "name": "office-addin-taskpane-react",
    "version": "0.0.1",
    "repository": {
        "type": "git",
        "url": "https://github.com/OfficeDev/Office-Addin-TaskPane-React.git"
    },
    "license": "MIT",
    "config": {
        "app-to-debug": "word",
        "app-type-to-debug": "desktop",
        "dev-server-port": 3000
    },
    "scripts": {
        "build": "webpack -p --mode production --https false",
        "build:dev": "webpack --mode development --https false",
        "build-dev": "webpack --mode development --https false && echo . && echo . && echo . && echo Please use 'build:dev' instead of 'build-dev'.",
        "convert-to-single-host": "node convertToSingleHost.js",
        "dev-server": "webpack-dev-server --mode development",
        "sideload": "office-toolbox sideload -m manifest.xml -a word",
        "start": "office-addin-debugging start manifest.xml",
        "start:desktop": "office-addin-debugging start manifest.xml desktop",
        "start:web": "office-addin-debugging start manifest.xml web",
        "stop": "office-addin-debugging stop manifest.xml",
        "test": "mocha -r ts-node/register test/*.ts",
        "unload": "office-toolbox remove -m manifest.xml -a word",
        "validate": "office-toolbox validate -m manifest.xml",
        "watch": "webpack --mode development --watch"
    },
    "dependencies": {
        "@uifabric/fluent-theme": "^0.16.6",
        "core-js": "^2.6.9",
        "es6-promise": "^4.2.8",
        "office-ui-fabric-react": "^7.6.3",
        "react": "^16.8.2",
        "react-dom": "^16.8.2"
    },
    "devDependencies": {
        "@babel/core": "^7.4.5",
        "@types/es6-collections": "^0.5.29",
        "@types/es6-promise": "0.0.32",
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.0.10",
        "@types/office-js": "^1.0.16",
        "@types/office-runtime": "^1.0.8",
        "@types/react": "^16.8.22",
        "@types/react-dom": "^16.8.4",
        "@types/react-hot-loader": "^4.1.0",
        "@types/webpack": "4.4.22",
        "@types/webpack-dev-server": "3.1.1",
        "babel-loader": "^8.0.6",
        "clean-webpack-plugin": "^3.0.0",
        "copy-webpack-plugin": "^5.0.3",
        "css-loader": "^2.1.1",
        "current-processes": "^0.2.1",
        "extract-text-webpack-plugin": "4.0.0-beta.0",
        "file-loader": "^3.0.1",
        "html-loader": "^0.5.5",
        "html-webpack-plugin": "^3.2.0",
        "less": "^3.9.0",
        "less-loader": "^4.1.0",
        "mocha": "^5.2.0",
        "office-addin-debugging": "^2.3.1",
        "office-addin-dev-certs": "^1.2.5",
        "office-addin-test-helpers": "^0.3.1",
        "office-addin-test-server": "^0.3.1",
        "office-toolbox": "^0.1.1",
        "postcss-loader": "3.0.0",
        "react-hot-loader": "^3.1.3",
        "source-map-loader": "^0.2.4",
        "style-loader": "0.23.0",
        "ts-loader": "^6.0.4",
        "ts-node": "^8.3.0",
        "typescript": "^3.5.2",
        "webpack": "^4.35.2",
        "webpack-cli": "^3.3.5",
        "webpack-dev-server": "^3.7.2"
    }
}
